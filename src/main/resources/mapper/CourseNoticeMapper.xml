<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuki.experiment.framework.mapper.CourseNoticeMapper">

    <resultMap id="BaseResultMap" type="com.yuki.experiment.framework.entity.CourseNotice">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="courseId" column="course_id" jdbcType="INTEGER"/>
            <result property="title" column="title" jdbcType="VARCHAR"/>
            <result property="content" column="content" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="teacherId" column="teacher_id" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,course_id,title,
        content,create_time,update_time,
        teacher_id
    </sql>

    <select id="getCourseNoticeTeacher" resultType="com.yuki.experiment.framework.dto.CourseNoticeTeacher">
        select cn.id id,
               cn.course_id courseId,
               cn.title title,
               cn.content content,
               cn.create_time createTime,
               cn.update_time updateTime,
               cn.teacher_id teacherId,
               t.name name
        from course_notice cn left join teacher t on t.id = cn.teacher_id
    </select>

</mapper>
